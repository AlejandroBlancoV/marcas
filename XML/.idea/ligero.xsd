            <xs:element type="xs:string" name="precip_mm"/>
            <xs:element type="xs:string" name="humidity"/>
            <xs:element type="xs:string" name="cloud"/>
            <xs:element type="xs:string" name="feelslike_c"/>
            <xs:element type="xs:string" name="vis_km"/>
            <xs:element type="xs:string" name="uv"/>
            <xs:element type="xs:string" name="gust_kph"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="rootType">
        <xs:sequence>
            <xs:element type="locationType" name="location"/>
            <xs:element type="currentType" name="current"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>