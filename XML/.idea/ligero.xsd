        <xs:sequence>
            <xs:element type="tipoLugar" name="lugar"/>
            <xs:element type="xs:string" name="region"/>
            <xs:element type="xs:string" name="pais"/>
            <xs:element type="xs:string" name="lat"/>
            <xs:element type="xs:string" name="lon"/>
            <xs:element type="xs:string" name="fecha"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="conditionType">
        <xs:sequence>
            <xs:element type="xs:string" name="text"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="currentType">
        <xs:sequence>
            <xs:element type="xs:string" name="last_updated"/>
